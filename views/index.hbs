<h1>MONGODB - EXERCISE</h1>
<section class="insert">
    <h3>Create a order</h3>
    <form action="/generate-order" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="price">Price</label>
            <input type="text" id="price" name="price">
        </div>
        <button type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h3>Get Data</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>Content: {{ this.content }}</div>
                <div>Price: {{ this.price }}</div>
                <div>ID: {{ this._id }}</div>
                <a href="/edit/{{ this._id }}">Edit</a>
                <a href="/delete/{{ this._id }}">Delete</a>
            </article>
        {{/each}}
    </div>
</section>
